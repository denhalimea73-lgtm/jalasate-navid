    <header>
        <h1>جلسات نوید</h1>
    </header>

    <main>
        <div id="setup-container">
            <h2>شروع جلسه جدید</h2>
            <p>یک نام برای جلسه خود وارد کنید و روی دکمه شروع کلیک کنید.</p>
            <input type="text" id="room-name" placeholder="مثلا: جلسه درس فیزیک">
            <button id="start-meeting-btn">🚀 شروع جلسه</button>
        </div>

        <div id="meeting-container">
            <div id="jitsi-container">
                <!-- Jitsi Meet will be embedded here -->
            </div>
            <div id="whiteboard-container">
                <!-- Whiteboard will be embedded here -->
            </div>
        </div>
    </main>

    <script>
        const startButton = document.getElementById('start-meeting-btn');
        const roomNameInput = document.getElementById('room-name');
        const setupContainer = document.getElementById('setup-container');
        const meetingContainer = document.getElementById('meeting-container');
        const jitsiContainer = document.getElementById('jitsi-container');
        const whiteboardContainer = document.getElementById('whiteboard-container');

        startButton.addEventListener('click', () => {
            let roomName = roomNameInput.value.trim();
            if (roomName === "") {
                // Generate a random name if empty
                roomName = "Navid-Meeting-" + Math.random().toString(36).substr(2, 9);
            }

            // Hide setup and show meeting view
            setupContainer.style.display = 'none';
            meetingContainer.style.display = 'flex';

            // --- Jitsi Meet API ---
            const domain = 'meet.jit.si';
            const options = {
                roomName: roomName,
                width: '100%',
                height: '100%',
                parentNode: jitsiContainer,
                lang: 'fa', // Set language to Farsi
                configOverwrite: {
                    startWithAudioMuted: true,
                    startWithVideoMuted: true,
                    prejoinPageEnabled: false, // Skip the pre-join screen
                },
                interfaceConfigOverwrite: {
                    // You can hide buttons here if you want
                    // TOOLBAR_BUTTONS: ['microphone', 'camera', 'desktop', 'chat', 'raisehand', 'fullscreen', 'hangup'],
                    SHOW_JITSI_WATERMARK: false,
                    SHOW_WATERMARK_FOR_GUESTS: false
                }
            };
            const api = new JitsiMeetExternalAPI(domain, options);

            // --- Whiteboard Iframe ---
            // Using Witeboard.com as a simple, no-login collaborative whiteboard
            const whiteboardFrame = document.createElement('iframe');
            // We use the same room name to have a unique whiteboard for each meeting
            whiteboardFrame.src = `https://witeboard.com/${roomName}`;
            whiteboardContainer.innerHTML = ''; // Clear previous content
            whiteboardContainer.appendChild(whiteboardFrame);
        });
    </script>

</body>
